<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('css/header.css') }}">
        <link rel="stylesheet" href="https://bootswatch.com/5/vapor/bootstrap.min.css">
        {% endblock %}
        

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
    </head>
    <body>

        {% include 'shared/_header.html.twig' %}
        {% include 'shared/_nav.html.twig' %}

        {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
        {% endfor %}

        {% for flashSuccess in app.flashes('verify_email_success') %}
        <div class="alert alert-success" role="alert">{{ flashSuccess }}</div>
        {% endfor %}

        {% for flashReservation in app.flashes('reservation_sent') %}
        <div class="alert alert-success" role="alert">{{ flashReservation }}</div>
        {% endfor %}

        {% for flashBilleterie in app.flashes('billeterie_register') %}
        <div class="alert alert-danger" role="alert">{{ flashBilleterie }}</div>
        {% endfor %}
        
        <div class="container">
        {% block body %}{% endblock %}
        </div>
    </body>
</html>
